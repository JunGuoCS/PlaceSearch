<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:id="@+id/info_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/info_tab_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_info_24dp"
            />

        <TextView
            android:id="@+id/info_tab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/selectedTabColor"
            style="@style/tabText"
            android:text="INFO"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/photo_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photo_tab_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_photos_24dp"
            />

        <TextView
            android:id="@+id/photo_tab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tabColor"
            style="@style/tabText"
            android:text="PHOTOS"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/map_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/map_tab_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_map_24dp"
            />

        <TextView
            android:id="@+id/map_tab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tabColor"
            style="@style/tabText"
            android:text="MAP"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/review_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/review_tab_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_review_24dp"
            />

        <TextView
            android:id="@+id/review_tab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tabColor"
            style="@style/tabText"
            android:text="REVIEWS"
            />
    </LinearLayout>

</LinearLayout>
